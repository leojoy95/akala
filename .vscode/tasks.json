{
	"version": "2.0.0",
	"tasks": [
		{
			"command": "yarn",
			"args": [
				"tsc",
				"-b",
				"packages/tsconfig.json",
				"--watch"
			],
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "yarn tsc: watch - packages/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - packages/tsconfig.json"
		},
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node"
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				}
			},
			"node": {
				"enableDebugging": true
			}
		}
	]
}